import socket
import platform
import requests
import subprocess

def get_hostname():
    return socket.gethostname()

def get_local_ip():
    try:
        s = socket.socket(socket.AF_INET, socket.SOCK_DGRAM)
        s.connect(("8.8.8.8", 80))  
        ip = s.getsockname()[0]
        s.close()
        return ip
    except:
        return "unknown"

def get_public_ip():
    try:
        return requests.get("https://api.ipify.org", timeout=3).text
    except:
        return "unknown"

def get_os_info():
    return platform.platform()

def send_info_to_server(hostname, local_ip, public_ip, os_info):
    url = "http://104.155.222.198:5000/report"  
    

    payload = {
        "name": hostname,
        "ip": local_ip,
        "public_ip": public_ip,
        "os": os_info
    }

    try:
        print("正在送出資料：", payload)
        response = requests.post(url, json=payload, timeout=5)
        print("伺服器回應：", response.text)
    except Exception as e:
        print("❌ 發送失敗：", e)

if __name__ == "__main__":
    h = get_hostname()
    lip = get_local_ip()
    pip = get_public_ip()
    os_info = get_os_info()
    send_info_to_server(h, lip, pip, os_info)
